create table emp(
empcode varchar(6),
empname varchar(20)
);
insert into emp values('E1','001Rajkumar');
insert into emp values('E2','Ramkumar002');
insert into emp values('E3','Ravikumar003');
select * from emp;
select  empcode , replace(replace(replace(replace(empname,'0',''), '1',''),'2',''), '3', '')  empname from emp;

create table student(
firstname varchar(30),
lastname varchar(25)
);
insert into student values('Pankaj ','Tiwari');
insert into student values('Ashok ','Sharma');
insert into student values('Arun ','Gupta');
select * from student;
Select concat(firstname , lastname) as name from student;
